<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import rover urdf file -->
    <xacro:include filename="$(find mr2_rover_description)/urdf/rover.urdf.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="rover.ros2_control.xacro" />


    <xacro:rover_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
